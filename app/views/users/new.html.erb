<div class="container">
  <div class="main clearfix">
    <div class="col-md-6 col-md-offset-3">
      <h1>Sign Up</h1>
      <%=simple_form_for(User.new, html: { class: 'form-horizontal' }) do |f| %>
        <%=f.input :username %>
        <%=f.input :password %>
        <%=f.input :password_confirmation %>
        <%=f.submit "Sign Up", class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>
</div>
