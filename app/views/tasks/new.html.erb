<div class="container">
  <div class="main clearfix">
    <div class="col-md-6 col-md-offset-3">
      <h1>Create new task</h1>
      <%=simple_form_for(Task.new, html: { class: 'form-horizontal' }) do |f| %>
        <%=f.input :name %>
        <%=f.submit "Save", class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>
</div>
