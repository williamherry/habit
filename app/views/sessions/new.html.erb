<div class="container">
  <div class="main clearfix">
    <div class="col-md-6 col-md-offset-3">
      <h1>Log In</h1>
      <%=simple_form_for User.new, url: "/login", html: { class: "form-horizontal" } do |f| %>
        <%=f.input :username %>
        <%=f.input :password %>
        <%=submit_tag "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
